<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<SolidColorBrush Color="LightGreen" x:Key="DefaultBorderColor"/>
	<SolidColorBrush Color="Aqua" x:Key="DefaultBackgroundColor"/>
	<SolidColorBrush Color="Black" x:Key="DefaultForegroundColor"/>
	
	<!--Globale Styles können auch in ResourceDictionaries abgelegt werden-->
	<Style TargetType="TextBlock">
		<Setter Property="FontSize" Value="40"/>
	</Style>
</ResourceDictionary>