<Window x:Class="M000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen"
		Topmost="True"
		SizeToContent="Height"
		FontSize="14">
	<Window.Background>
		<LinearGradientBrush>
			<GradientStop Offset="0" Color="White"></GradientStop>
			<GradientStop Offset="1" Color="Aqua"></GradientStop>
		</LinearGradientBrush>
	</Window.Background>
	<StackPanel Margin="5">
		<UniformGrid Columns="2">
			<TextBlock Text="Vorname: " VerticalAlignment="Center"/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Nachname: " VerticalAlignment="Center"/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Geburtsdatum: " VerticalAlignment="Center"/>
			<DatePicker/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Verheiratet: " VerticalAlignment="Center"/>
			<CheckBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<TextBlock Text="Lieblingsfarbe: " VerticalAlignment="Center"/>
			<ComboBox/>
		</UniformGrid>
		<UniformGrid Margin="0, 5, 0, 0">
			<TextBlock Text="Geschlecht: " VerticalAlignment="Center"/>
			<StackPanel>
				<RadioButton GroupName="Gender" Content="M"/>
				<RadioButton GroupName="Gender" Content="W"/>
				<RadioButton GroupName="Gender" Content="D"/>
			</StackPanel>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 5, 0, 0">
			<Button Content="Abbrechen" Margin="0, 0, 2.5, 0"/>
			<Button Content="OK" Margin="2.5, 0, 0, 0"/>
		</UniformGrid>
	</StackPanel>
	
